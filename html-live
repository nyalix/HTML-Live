##!/bin/sh

npm init

mkdir -p src/css/img
mkdir -p dist/css/img

npm install --save-dev gulp browser-sync gulp-jade gulp-stylus gulp-autoprefixer gulp-plumber

cat << EOF > src/index.jade
doctype html
html
  head
    meta(charset='UTF-8')
    title Hello, Jade!
    link(link href="css/style.css" rel="stylesheet" type="text/css")
  body
    div.one
      h1 Hello, Happy Live Coding!
    div.twe
      h2 edit me index.jade
    div.three
      h2 and style.styl
EOF

cat << EOF > src/css/style.styl
html, body, div, span, p, a, del, em, img, ol, ul, li, fieldset, form, label {
	margin: 0
	padding: 0
	border: 0
	font-size: 100%
	font: inherit
	vertical-align: baseline
}

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
	display: block
}

html, body {
	line-height: 1
	min-height:vh
  font-family:"Hiragino Kaku Gothic Pro", "ヒラギノ角ゴ Pro W3", "メイリオ", arial, helvetica, sans-serif
}

div {
  height: 100vh
}
.one {
  background-color: red
}
.two {
    background-color: blue
}
.three {
  background-color: green
}
EOF

cat << EOF > gulpfile.js
var gulp   = require('gulp');
var browserSync = require('browser-sync').create();
var jade   = require('gulp-jade');
var stylus = require('gulp-stylus');
var autoprefixer = require("gulp-autoprefixer");
var plumber = require("gulp-plumber");

gulp.task('jade', function() {
  gulp.src('./src/*.jade')
    .pipe(plumber())
    .pipe(jade({pretty: true}))
    .pipe(gulp.dest('./src'));
});

gulp.task('stylus', function() {
    gulp.src('./src/css/*.styl')
      .pipe(plumber())
      .pipe(stylus({print: true}))
      .pipe(autoprefixer())
      .pipe(gulp.dest('./src/css'));
});

// Static server
gulp.task('browser-sync', function() {
    browserSync.init({
        server: {
            baseDir: "./src"
        }
    });
    gulp.watch('./src/*.jade', ['jade']);
    gulp.watch('./src/css/*.styl', ['stylus']);
    gulp.watch(['./src/**','./src/css/**'], function() {
	    browserSync.reload();});
});

gulp.task('default', ['jade','stylus', 'browser-sync']);
EOF